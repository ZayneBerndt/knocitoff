<%= content_tag :div, class: "media", id: "item-#{item.id}" do %>
  <div class="media-body">
    
    <small>
      <div class="row">
       <div class="col-md-4">
        <%= item.name %>
        </div>
        <div class="col-md-4">
          <%=item.days_left %>
        </div>
        <div class="col-md-1">+         
           <%# if policy(item).destroy? %>
            <%= link_to "Delete", user_item_path(current_user, item), method: :delete, remote: true, class: 'glyphicon glyphicon-ok' %>
          <% #end %>
        </div>
      </div>
    </small>
  </div>
<% end %>